@page "/Hal1"
@using Bydgoszcz.Services

@inject NavigationManager _navigationManager
@inject INavigateToPage _navigateToPage


<div class="background">
	<h1>First Hal</h1>
	<div class="buttons">
		<button @onclick='() => _navigateToPage.OnNavigatedTo("Hal2")'>Second Hal</button>
		<button @onclick='() => _navigateToPage.OnNavigatedTo("DownStairs")'>Stairs</button>
	</div>
</div>


@code {
	bool button = false;

	void OnClick(string destination)
	{
		_navigationManager.NavigateTo($"/{destination}");
	}
}
